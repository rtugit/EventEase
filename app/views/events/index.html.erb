<h1>Organizer dashboard</h1>

<div style="margin-bottom: 20px;">
  <%= form_with url: events_path, method: :get, local: true do |form| %>
    <%= form.text_field :query, value: params[:query], placeholder: "Search by title or location", style: "padding: 8px;" %>
    <%= form.submit "Search", style: "padding: 8px;" %>
    <% if params[:query].present? %>
      <%= link_to "Clear", events_path, style: "margin-left: 10px;" %>
    <% end %>
  <% end %>
</div>

<!-- <%= link_to "", root_path %> -->

<% if @events.any? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Location</th>
        <th>Registrations</th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.starts_at&.strftime("%d.%m.%Y %H:%M") %></td>
          <td><%= event.location %></td>
          <td>
            <%= event.registrations.size %>
            <% if event.capacity.present? %>
              / <%= event.capacity %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You donâ€™t have any events yet.</p>
<% end %>

<ul>
  <% @events.each do |event| %>
    <li><%= link_to event.name, event_path(event) %></li>
  <% end %>
</ul>
