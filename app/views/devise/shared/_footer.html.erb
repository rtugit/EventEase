<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-brand">
      <%= link_to root_path, class: "footer-logo-link" do %>
        <%= image_tag "eventease-logo-white.svg", alt: "EventEase", class: "footer-logo" %>
        <span class="footer-brand-name">EventEase</span>
      <% end %>
      <p class="footer-tagline">Discover events around you.</p>
    </div>

    <div class="footer-links">
      <div class="footer-column">
        <h4>Explore</h4>
        <ul>
          <li><%= link_to "All Events", events_path %></li>
          <li><%= link_to "Create Event", new_event_path %></li>
          <li><%= link_to "Dashboard", dashboard_path %></li>
        </ul>
      </div>

      <div class="footer-column">
        <h4>Company</h4>
        <ul>
          <li><%= link_to "About Us", "#" %></li>
          <li><%= link_to "Contact", "#" %></li>
          <li><%= link_to "Careers", "#" %></li>
        </ul>
      </div>

      <div class="footer-column">
        <h4>Legal</h4>
        <ul>
          <li><%= link_to "Privacy Policy", "#" %></li>
          <li><%= link_to "Terms of Service", "#" %></li>
          <li><%= link_to "Cookie Policy", "#" %></li>
        </ul>
      </div>
    </div>

    <div class="footer-social">
      <h4>Follow Us</h4>
      <div class="social-icons">
        <a href="#" aria-label="Instagram" class="social-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
          </svg>
        </a>
        <a href="#" aria-label="Twitter" class="social-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
          </svg>
        </a>
        <a href="#" aria-label="LinkedIn" class="social-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
            <rect x="2" y="9" width="4" height="12"></rect>
            <circle cx="4" cy="4" r="2"></circle>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <p>&copy; <%= Date.current.year %> EventEase. All rights reserved.</p>
    <p class="footer-credit">Made with ❤️ by Le Wagon</p>
  </div>
</footer>
