<script defer src="https://cdn.jsdelivr.net/npm/face-api.js@0.22.2/dist/face-api.min.js"></script>

<div class="personal-info-page" data-controller="camera">
  <div class="page-header">
    <%= link_to account_path, class: "back-arrow" do %>
      <i class="fa-solid fa-chevron-left"></i>
    <% end %>
    <h1 class="page-title">Personal Info</h1>
    <div class="header-spacer"></div>
  </div>

  <div class="profile-photo-section">
    <div class="profile-photo" data-action="click->camera#openCamera">
      <% if current_user.photo.attached? %>
        <%= image_tag current_user.photo, class: "avatar-img" %>
      <% else %>
        <div class="avatar-placeholder">
          <span class="placeholder-icon">ðŸ“·</span>
          <span class="placeholder-text">Add Photo</span>
        </div>
      <% end %>
      <div class="photo-overlay">ðŸ“·</div>
    </div>
    <p class="photo-hint">Click to change photo</p>
    <img data-camera-target="avatar" class="hidden">
  </div>

  <%= form_with model: current_user, url: update_user_path(current_user), method: :patch, class: "personal-info-form" do |f| %>
    <%= f.hidden_field :photo_data, data: { camera_target: "photoInput" } %>
    <div class="form-group">
      <label class="form-label">First Name</label>
      <%= f.text_field :first_name, class: "form-input", placeholder: "Enter your first name" %>
    </div>

    <div class="form-group">
      <label class="form-label">Last Name</label>
      <%= f.text_field :last_name, class: "form-input", placeholder: "Enter your last name" %>
    </div>

    <div class="form-group">
      <label class="form-label">Email</label>
      <%= f.email_field :email, class: "form-input", placeholder: "Enter your email" %>
    </div>

    <div class="form-group">
      <label class="form-label">Phone Number</label>
      <%= f.telephone_field :phone_number, class: "form-input", placeholder: "Enter your phone number" %>
    </div>

    <div class="form-group">
      <label class="form-label">Gender</label>
      <div class="select-wrapper">
        <%= f.select :gender,
            options_for_select([
              ["Select Gender", ""],
              ["Male", "male"],
              ["Female", "female"],
              ["Other", "other"],
              ["Prefer not to say", "prefer_not_to_say"]
            ], current_user.gender),
            {},
            { class: "form-select" } %>
        <i class="fa-solid fa-chevron-down select-icon"></i>
      </div>
    </div>

    <div class="form-submit">
      <%= f.submit "Update Info", class: "submit-btn" %>
    </div>
  <% end %>

  <div class="camera-modal" data-camera-target="modal">
    <div class="camera-modal-content">
      <button type="button" class="close-btn" data-action="click->camera#closeModal">âœ•</button>

      <video data-camera-target="video" autoplay muted playsinline></video>
      <img data-camera-target="preview" class="hidden">
      <canvas data-camera-target="canvas" class="hidden"></canvas>

      <p class="status" data-camera-target="status">Initializing...</p>

      <div class="camera-actions">
        <button type="button" data-camera-target="captureBtn" data-action="click->camera#capture" disabled>ðŸ“¸ Capture</button>
        <button type="button" data-camera-target="saveBtn" data-action="click->camera#save" class="hidden">âœ… Save</button>
        <button type="button" data-action="click->camera#retake">ðŸ”„ Retake</button>
      </div>
    </div>
  </div>
</div>
