<div class="devise-container">
  <div class="auth-card">
    <div class="devise-logo">
      <%= image_tag "eventease-logo.svg", alt: "EventEase Logo", class: "logo-img" %>
      <h1>EventEase</h1>
    </div>

    <div class="devise-form">
      <h2>Log in</h2>
      <p class="form-subtitle">Welcome back! Please sign in to your account.</p>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label: "Email",
                      input_html: { 
                        autocomplete: "email",
                        class: "form-control"
                      },
                      wrapper_html: { class: "form-group" } %>
          <%= f.input :password,
                      required: false,
                      label: "Password",
                      input_html: { 
                        autocomplete: "current-password",
                        class: "form-control"
                      },
                      wrapper_html: { class: "form-group" } %>
          <%= f.input :remember_me, 
                      as: :boolean, 
                      wrapper_html: { class: "form-check" },
                      label_html: { class: "form-check-label" },
                      input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <div class="devise-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
