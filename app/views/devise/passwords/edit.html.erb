<div class="devise-container">
  <div class="auth-card">
    <div class="devise-logo">
      <%= image_tag "eventease-logo.svg", alt: "EventEase Logo", class: "logo-img" %>
      <h1>EventEase</h1>
    </div>

    <div class="devise-form">
      <h2>Change your password</h2>
      <p class="form-subtitle">Enter your new password below.</p>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <%= f.input :password,
                      label: "New password",
                      required: true,
                      autofocus: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { 
                        autocomplete: "new-password",
                        class: "form-control"
                      },
                      wrapper_html: { class: "form-group" } %>
          <%= f.input :password_confirmation,
                      label: "Confirm your new password",
                      required: true,
                      input_html: { 
                        autocomplete: "new-password",
                        class: "form-control"
                      },
                      wrapper_html: { class: "form-group" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Change my password", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <div class="devise-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
