<div class="container py-4">
  <div class="d-flex justify-content-between align-items-start mb-3">
    <div>
      <h1 class="h4 mb-1">Check-in mode</h1>
      <p class="mb-1 text-muted">
        <%= @event.title %>
      </p>
      <p class="mb-0 text-muted small">
        <%= @event.starts_at&.strftime("%d.%m.%Y %H:%M") %> Â· <%= @event.location %>
      </p>
    </div>

    <div class="text-end">
      <div class="fw-semibold">
        <%= @registrations.where(status: "checked_in").count %> /
        <%= @registrations.count %>
      </div>
      <div class="text-muted small">
        checked in
      </div>
    </div>
  </div>

  <hr>

  <% if @registrations.any? %>
    <div class="list-group">
      <% @registrations.each do |registration| %>
        <div class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <div class="fw-semibold">
              <%= registration.name.presence || registration.email %>
            </div>
            <div class="text-muted small">
              <%= registration.email %>
            </div>
          </div>

          <div class="d-flex align-items-center gap-2">
            <% if registration.status == "checked_in" %>
              <span class="badge bg-success">Checked in</span>
            <% else %>
              <span class="badge bg-secondary">Not checked in</span>
            <% end %>

            <%= button_to(
                  (registration.status == "checked_in" ? "Undo" : "Check in"),
                  check_in_event_registration_path(@event, registration),
                  method: :patch,
                  class: "btn btn-sm btn-primary"
                ) %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">No attendees yet.</p>
  <% end %>

  <div class="mt-4">
    <%= link_to "Back to event", event_path(@event), class: "btn btn-link p-0" %>
  </div>
</div>
